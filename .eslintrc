{
	"root": true,

	"extends": "eslint:recommended",

	"parserOptions": {
		"ecmaVersion": 6
	},

	"env": {
		"node": true,
		"es6": true
	},

	"rules": {
		"eqeqeq": [2, "smart"],
		"no-shadow": 0,
		"valid-jsdoc": [1, {
			"requireReturnDescription": false
		}],
		"strict": 0,
		"no-mixed-spaces-and-tabs": [2, "smart-tabs"],
		"no-console": 0
	}
}